<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:id="@+id/exercise_fragment"
    android:padding="@dimen/bootstrap_h1_vert_padding"
    tools:context="checkpoint.project.andela.pushfit.activities.HomeDrawer$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/timer_field"
        android:textSize="40sp"
        android:layout_weight="1.5"
        android:paddingTop="15dp"
        android:paddingBottom="50dp"
        android:layout_gravity="center_vertical|center_horizontal"/>

    <TextView
        android:id="@+id/fragment_exercise"
        android:layout_width="wrap_content"
        android:background="@drawable/start_button_states_selector"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:focusable="true"
        android:clickable="true"
        android:paddingTop="40dp"
        android:layout_weight="2"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/start_button_text"
        android:textColor="@color/icons"
        android:animateLayoutChanges="true"/>

    <LinearLayout
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingTop="50dp"
        android:layout_gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_state"
            android:text=""
            android:textSize="50sp"/>

        <!--<EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:inputType="number"
            android:id="@+id/pushup_num"
            android:hint="Push ups"/>-->
        <!--<Button
            android:layout_width="wrap_content"
            android:background="@drawable/save_record_button"
            android:clickable="true"
            android:id="@+id/save_button"
            android:textColor="@color/icons"
            android:layout_height="wrap_content"
            android:text="Save Record"/>-->
    </LinearLayout>

</LinearLayout>
